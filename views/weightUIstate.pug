extends layout

block content
    link(rel="stylesheet", href="/assets/stylesheets/slider.css")
    H1 Vægtning Tilstand
    button
        a(href="http://localhost:3000/") Home
    form(action="/weightUI/state", method="post")
        select#select(name = `select`)
            option(value='420') Skole
            option(value='440') Dag Institutioner
        +slider('Tekniske anlæg', 'tekBullet', "tekSlider", `${values[0]}`, `${left_array[0]}`)
        +slider('Udv. belægning', 'udvBullet', 'udvSlider', `${values[1]}`, `${left_array[1]}`)
        +slider('OSV....', 'osvBullet', 'osvSlider', `${values[2]}`, `${left_array[2]}`)
        input.btn(type="submit", value="Send data")
    script(src="/assets/javascripts/stateslider.js")

include slider