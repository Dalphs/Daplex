
extends layout

block content

    link(rel="stylesheet", href="/assets/stylesheets/dashboard.css")

    .sidenav

        p.top-nav-text Daplex

        button.dropdown-btn
            a(href='#helpdesk') Helpdesk

        button.dropdown-btn
            a(href='#condition') Tilstand

        button.dropdown-btn
            a(href='#energy') Energi

    div.pop-out(id='pop-out')
        p.pop-out-header(id='pop-out-header') Header 

        select(id='helpdesk-category') 
            option(value=1 id='category-helpdesk-global') Global Helpdesk
                each helpdeskCategory in helpdeskCategories
                    option(value=helpdeskCategory.id) #{helpdeskCategory.name}

        select(id='condition-category') 
            option(value=1 id='category-condition-global') Global Tilstand
                each conditionCategory in conditionCategories
                    option(value=conditionCategory.id) #{conditionCategory.name}            

        select(id='energy-category') 
            option(value=1 id='category-energy-global') Global Energi
            option(value=2 id='category-electricity') El
            option(value=3 id='category-water') Vand
            option(value=4 id='category-heat') Varme

        form.input-container(name="inputForm" action="/dashboard/saveinputdata" method="POST")
            label Gul grænseværdi
            input(type="number" id="thresholdYellow" name='yellowThreshold')
            label Rød grænseværdi
            input(type="number" id="thresholdRed" name='redThreshold')

            div.slide-container
                label(for="weightslider" id='weightslider') Vægtning
                input(type="range" min="0" max="100" value="50" class="slider" id="myRange" name='weightslider')

            button(type="submit" value='Submit') Gem
            
     
    script(src="/assets/javascripts/dashboard.js") 

    
              
        

